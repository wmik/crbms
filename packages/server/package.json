{
  "name": "server",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "apollo-server": "^2.6.3",
    "apollo-server-express": "^2.6.3",
    "express": "^4.17.1",
